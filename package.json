{
  "name": "yivmanager",
  "displayName": "YivManager",
  "description": "A sleek project manager that helps you organize, copy, and switch between your coding projects with ease. Created by Yivani.",
  "version": "1.1.0",
  "publisher": "Yivani",
  "author": {
    "name": "Yivani"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yivani/yivmanager"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "project manager",
    "workspace",
    "folders",
    "organization",
    "yivani"
  ],
  "galleryBanner": {
    "color": "#f0f0f0",
    "theme": "light"
  },
  "icon": "resources/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yivmanager",
          "title": "YivManager",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "yivmanager": [
        {
          "type": "webview",
          "id": "yivmanager.sidebar",
          "name": "Project Tools"
        }
      ]
    },
    "commands": [
      {
        "command": "projectManager.addProject",
        "title": "Add Current Project"
      },
      {
        "command": "projectManager.openProject",
        "title": "Open Project"
      },
      {
        "command": "projectManager.copyProject",
        "title": "Copy Project"
      },
      {
        "command": "projectManager.selectTargetFolder",
        "title": "Select Target Folder"
      },
      {
        "command": "projectManager.openSettings",
        "title": "Settings"
      }
    ],
    "keybindings": [
      {
        "command": "projectManager.openProject",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorFocus"
      },
      {
        "command": "projectManager.addProject",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorFocus"
      },
      {
        "command": "projectManager.copyProject",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorFocus"
      },
      {
        "command": "projectManager.selectTargetFolder",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "title": "YivManager",
      "properties": {
        "projectManager.targetFolder": {
          "type": "string",
          "default": "",
          "description": "Target folder for copied projects. This folder will be used as the destination when copying projects.",
          "scope": "machine"
        },
        "projectManager.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show YivManager in the status bar"
        }
      }
    }
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^16.0.0",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile"
  }
}
